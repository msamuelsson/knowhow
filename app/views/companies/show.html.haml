      <span class="detailsfont">Note Operative</span>:
      = @company.note_operative
   %li
      <span class="detailsfont">Portale</span>:
      = @company.portale
   %li
      <span class="detailsfont">Premio Minimo</span>:
      = @company.premio_minimo
   %li
