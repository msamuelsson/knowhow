      = @company.area
   %li
      <span class="detailsfont">Provvigioni</span>:
      = @company.provvigione
   %li
      <span class="detailsfont">Autore</span>:
      = @company.autore
   %li
      <span class="detailsfont">Ultimo Aggiornamento</span>:
      = @company.aggiornamento
   %li
      <span class="detailsfont">Canale 1</span>:
      = @company.canale_1
